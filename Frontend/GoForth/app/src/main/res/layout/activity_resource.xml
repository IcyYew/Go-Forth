<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResourceActivity"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-28dp">

        <TextView
            android:id="@+id/WoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="305dp"
            android:text="Wood\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FoodAmount" />

        <TextView
            android:id="@+id/WoodAmount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="Wood\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/WoodPrompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WoodText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/WoodPrompt"
            android:layout_width="83dp"
            android:layout_height="60dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="19dp"
            android:hint="Amount"
            app:layout_constraintEnd_toStartOf="@+id/WoodPlus"
            app:layout_constraintStart_toEndOf="@+id/WoodAmount"
            app:layout_constraintTop_toBottomOf="@+id/FoodPrompt" />

        <Button
            android:id="@+id/WoodPlus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="16dp"
            android:text="+"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/WoodMinus"
            app:layout_constraintStart_toEndOf="@+id/WoodPrompt"
            app:layout_constraintTop_toBottomOf="@+id/FoodPlus" />

        <Button
            android:id="@+id/WoodMinus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="36dp"
            android:text="-"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/WoodPlus"
            app:layout_constraintTop_toBottomOf="@+id/FoodMinus" />

        <TextView
            android:id="@+id/StoneAmount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="Stone\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/StonePrompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StoneText" />

        <TextView
            android:id="@+id/PlatinumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="302dp"
            android:text="Platinum\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StoneAmount" />

        <Button
            android:id="@+id/PlatinumMinus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="38dp"
            android:text="-"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/PlatinumPlus"
            app:layout_constraintTop_toBottomOf="@+id/StoneMinus" />

        <TextView
            android:id="@+id/PlatinumAmount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Plat\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/PlatinumPrompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlatinumText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/PlatinumPrompt"
            android:layout_width="83dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="18dp"
            android:hint="Amount"
            app:layout_constraintEnd_toStartOf="@+id/PlatinumPlus"
            app:layout_constraintStart_toEndOf="@+id/PlatinumAmount"
            app:layout_constraintTop_toBottomOf="@+id/StonePrompt" />

        <Button
            android:id="@+id/PlatinumPlus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="16dp"
            android:text="+"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/PlatinumMinus"
            app:layout_constraintStart_toEndOf="@+id/PlatinumPrompt"
            app:layout_constraintTop_toBottomOf="@+id/StonePlus" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/StonePrompt"
            android:layout_width="83dp"
            android:layout_height="60dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="19dp"
            android:hint="Amount"
            app:layout_constraintEnd_toStartOf="@+id/StonePlus"
            app:layout_constraintStart_toEndOf="@+id/StoneAmount"
            app:layout_constraintTop_toBottomOf="@+id/WoodPrompt" />

        <Button
            android:id="@+id/StonePlus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="16dp"
            android:text="+"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/StoneMinus"
            app:layout_constraintStart_toEndOf="@+id/StonePrompt"
            app:layout_constraintTop_toBottomOf="@+id/WoodPlus" />

        <Button
            android:id="@+id/StoneMinus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="36dp"
            android:text="-"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/StonePlus"
            app:layout_constraintTop_toBottomOf="@+id/WoodMinus" />

        <TextView
            android:id="@+id/StoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="305dp"
            android:text="Stone\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WoodAmount" />

        <TextView
            android:id="@+id/FoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="304dp"
            android:text="Food\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Back" />

        <TextView
            android:id="@+id/FoodAmount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Food\nAmount:"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/FoodPrompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FoodText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/FoodPrompt"
            android:layout_width="83dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="178dp"
            android:layout_marginEnd="19dp"
            android:hint="Amount"
            app:layout_constraintEnd_toStartOf="@+id/FoodPlus"
            app:layout_constraintStart_toEndOf="@+id/FoodAmount"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/FoodPlus"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="179dp"
            android:layout_marginEnd="16dp"
            android:text="+"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/FoodMinus"
            app:layout_constraintStart_toEndOf="@+id/FoodPrompt"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/FoodMinus"
            android:layout_width="65dp"
            android:layout_height="59dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="179dp"
            android:layout_marginEnd="36dp"
            android:text="-"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FoodPlus"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="305dp"
            android:text="Back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>